@page "/"
@using RackConfigurationn.Shared.Models
@using System.Net.Http.Json
@inject HttpClient Http
@inject NavigationManager Navigation

<div class="auth-container">
    <div class="auth-content">
        <div class="header-section">
            <h1 class="brand-title">Rack <span class="highlight">Configurator</span></h1>
            <p class="brand-subtitle">Endüstriyel depo çözümlerine hoş geldiniz.</p>
        </div>

        <div class="glass-card">
            <h2 class="form-title">@(isLoginMode ? "Giriş Yap" : "Kayıt Ol")</h2>

            <div class="form-layout">
                @if (isLoginMode)
                {
                    <div class="input-group">
                        <input type="email" @bind="loginModel.Email" placeholder="E-posta" class="custom-input" />
                    </div>

                    <div class="input-group">
                        <input type="password" @bind="loginModel.Password" placeholder="Şifre" class="custom-input" />
                    </div>

                    @* OnValidSubmit yerine direkt onclick ile metodu çağırıyoruz *@
                    <button type="button" class="btn-primary" @onclick="HandleSubmit" disabled="@isProcessing">
                        @(isProcessing ? "Bekleyiniz..." : "Giriş Yap")
                    </button>
                }
                else
                {
                    <div class="grid-inputs">
                        <input type="text" @bind="registerModel.FirstName" placeholder="Ad" class="custom-input" />
                        <input type="text" @bind="registerModel.LastName" placeholder="Soyad" class="custom-input" />
                    </div>
                    <input type="text" @bind="registerModel.Username" placeholder="Kullanıcı Adı" class="custom-input" />
                    <input type="email" @bind="registerModel.Email" placeholder="E-posta" class="custom-input" />
                    <input type="password" @bind="registerModel.Password" placeholder="Şifre" class="custom-input" />

                    <button type="button" class="btn-primary" @onclick="HandleSubmit" disabled="@isProcessing">
                        @(isProcessing ? "Kaydediliyor..." : "Kaydı Tamamla")
                    </button>
                }
            </div>

            <div class="footer-link">
                <span>@(isLoginMode ? "Hesabınız yok mu?" : "Zaten bir hesabınız var mı?")</span>
                <button type="button" @onclick="ToggleMode" class="toggle-btn">
                    @(isLoginMode ? "Kayıt Ol" : "Giriş Yap")
                </button>
            </div>

            @if (!string.IsNullOrEmpty(statusMessage))
            {
                <div class="alert @(isSuccess ? "alert-success" : "alert-error")">
                    @statusMessage
                </div>
            }
        </div>
    </div>
</div>

<style>
    :root {
        --bg-color: #0b1120;
        --card-bg: rgba(30, 41, 59, 0.7);
        --input-bg: #0f172a;
        --primary-blue: #2563eb;
        --text-dim: #94a3b8;
    }

    .auth-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: radial-gradient(circle at center, #1e293b 0%, #0b1120 100%);
        font-family: 'Segoe UI', sans-serif;
    }

    .auth-content {
        width: 100%;
        max-width: 440px;
        padding: 20px;
        text-align: center;
    }

    .brand-title {
        font-size: 2.5rem;
        font-weight: 800;
        color: white;
        margin-bottom: 0.5rem;
    }

        .brand-title .highlight {
            color: #3b82f6;
        }

    .brand-subtitle {
        color: var(--text-dim);
        font-size: 1rem;
        margin-bottom: 2rem;
    }

    .glass-card {
        background: var(--card-bg);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 24px;
        padding: 40px;
        box-shadow: 0 20px 50px rgba(0,0,0,0.5);
    }

    .form-layout {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    .custom-input {
        width: 100%;
        background: var(--input-bg);
        border: 1px solid #334155;
        border-radius: 10px;
        padding: 12px 15px;
        color: white;
        font-size: 1rem;
    }

    .btn-primary {
        background: var(--primary-blue);
        color: white;
        border: none;
        padding: 14px;
        border-radius: 10px;
        font-weight: bold;
        cursor: pointer;
        width: 100%;
        transition: 0.3s;
    }

        .btn-primary:hover:not(:disabled) {
            background: #1d4ed8;
        }

        .btn-primary:disabled {
            opacity: 0.5;
        }

    .grid-inputs {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 10px;
    }

    .footer-link {
        margin-top: 25px;
        color: var(--text-dim);
    }

    .toggle-btn {
        background: none;
        border: none;
        color: var(--primary-blue);
        font-weight: bold;
        cursor: pointer;
    }

    .alert {
        margin-top: 20px;
        padding: 12px;
        border-radius: 10px;
        font-size: 0.9rem;
    }

    .alert-error {
        background: rgba(220, 38, 38, 0.2);
        color: #f87171;
    }

    .alert-success {
        background: rgba(34, 197, 94, 0.2);
        color: #4ade80;
    }

    /* Razor keyframes escape */
    @@keyframes fadeIn {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }
</style>

@code {
    private bool isLoginMode = true;
    private bool isProcessing = false;
    private string statusMessage = "";
    private bool isSuccess = false;

    // Senin AccountController'daki LoginDto isimlendirmesine sadık kaldık
    private LoginDto loginModel = new();
    private User registerModel = new();

    private void ToggleMode()
    {
        isLoginMode = !isLoginMode;
        statusMessage = string.Empty;
    }

    private async Task HandleSubmit()
    {
        if (isProcessing) return;

        isProcessing = true;
        statusMessage = "İşlem yapılıyor, lütfen bekleyin...";

        try
        {
            var endpoint = isLoginMode ? "api/Account/login" : "api/Account/register";
            var payload = isLoginMode ? (object)loginModel : (object)registerModel;

            Console.WriteLine($"İstek gönderiliyor: {endpoint}"); // Tarayıcı konsolunda takip et

            var response = await Http.PostAsJsonAsync(endpoint, payload);

            if (response.IsSuccessStatusCode)
            {
                isSuccess = true;
                if (isLoginMode)
                {
                    statusMessage = "Giriş başarılı! Yönlendiriliyorsunuz...";
                    StateHasChanged(); // Arayüzü güncelle
                    await Task.Delay(500);
                    Navigation.NavigateTo("/configurator");
                }
                else
                {
                    statusMessage = "Kayıt başarılı! Şimdi giriş yapabilirsiniz.";
                    await Task.Delay(1500);
                    isLoginMode = true;
                    statusMessage = "";
                }
            }
            else
            {
                isSuccess = false;
                // Hatayı API'den gelen mesajla göster
                var errorObj = await response.Content.ReadFromJsonAsync<ErrorMsg>();
                statusMessage = errorObj?.Message ?? "Sunucu hatası (401/400)";
            }
        }
        catch (Exception ex)
        {
            isSuccess = false;
            statusMessage = $"Hata: {ex.Message}";
        }
        finally
        {
            isProcessing = false;
            StateHasChanged();
        }
    }

    // Backend sınıflarınla tam uyumlu yardımcı sınıflar
    public class LoginDto { public string Email { get; set; } = ""; public string Password { get; set; } = ""; }
    public class ErrorMsg { public string Message { get; set; } = ""; }
}